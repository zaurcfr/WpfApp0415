<Window x:Class="WpfApp0415.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp0415"
        mc:Ignorable="d"
        Title="Info" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label FontSize="16">Vendor</Label>
            <TextBox Text="{Binding Car.Vendor,UpdateSourceTrigger=PropertyChanged}" FontSize="24"></TextBox>
            <Label FontSize="16">Model</Label>
            <TextBox Text="{Binding Car.Model,UpdateSourceTrigger=PropertyChanged}" FontSize="24"></TextBox>
            <Label FontSize="16">Year</Label>
            <TextBox Text="{Binding Car.Year,UpdateSourceTrigger=PropertyChanged}" FontSize="24"></TextBox>
        </StackPanel>
    </Grid>
</Window>
